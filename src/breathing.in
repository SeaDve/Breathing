import os
import sys
import signal
import gettext
import locale

VERSION = '@VERSION@'
pkgdatadir = '@pkgdatadir@'
localedir = '@localedir@'

sys.path.insert(1, pkgdatadir)
signal.signal(signal.SIGINT, signal.SIG_DFL)
locale.bindtextdomain('breathing', localedir)
locale.textdomain('breathing')
gettext.bindtextdomain('breathing', localedir)
gettext.textdomain('breathing')
gettext.install('breathing', localedir)

if __name__ == '__main__':
    import gi

    from gi.repository import Gio, GLib

    GLib.set_application_name("Breathing")

    resource = Gio.Resource.load(os.path.join(pkgdatadir, 'breathing.gresource'))
    resource._register()

    from breathing import main
    sys.exit(main.main(VERSION))
